{#
/**
 * @file
 * Default theme implementation to display a single wall post with Bootstrap styling.
 *
 * Available variables:
 * - post: The post object.
 * - like_link: A renderable array for the 'Like/Unlike' link.
 * - like_text: The translated, pluralized text for the like count (e.g., "1 like", "5 likes").
 * - comments: A list of comments.
 * - comment_form: The form for adding a new comment.
 *
 * @see \Drupal\user_wall\PostRenderer::buildPost()
 *
 * @ingroup themeable
 */
#}
<div class="card shadow-sm mb-3" id="wall-post-{{ post.pid }}">
<div class="card-header p-3">
<div
	class="d-flex align-items-start">
	{# You could add the author's profile picture here for a better look #}
	<div class="flex-grow-1 text-end p-0 card-text">
		<small class="text-muted">
			<i class="bi bi-clock"></i>
			{{ post.created|format_date('custom', 'd.m.Y H:i') }}</small>
	</div>
</div>
</div>
  <div class="card-body">


		{% if post.message %}
			<p class="card-text">{{ post.message }}</p>
		{% endif %}

		{% if post.image %}
			<div class="post-image mb-3">
				{{ post.image }}
			</div>
		{% endif %}

		<hr>

		<div class="post-actions d-flex align-items-center mb-3">
			{{ like_link }}
			<span class="ms-1 text-muted">{{ like_text }}</span>
		</div>
		<div class="post-comments">
			{% if comments %}
				<ul class="list-group list-group-flush">
					{% for comment in comments %}
						<li class="list-group-item px-0">
							<div class="d-flex w-100 justify-content-between">
								<h6 class="mb-1 fw-bold">{{ comment.author }}</h6>
							</div>
							<p class="mb-1">{{ comment.comment }}</p>
						</li>
					{% endfor %}
				</ul>
			{% endif %}
			<div class="mt-3">
				{{ comment_form }}
			</div>
		</div>
	</div>
</div>
